{
  "name": "querista",
  "version": "0.0.0",
  "description": "Type-safe Lightweight SQL tools",
  "main": "./dist/main.js",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "default": "./dist/main.js"
    }
  },
  "files": [
    "dist/**",
    "src/**"
  ],
  "scripts": {
    "all": "run-s lint build",
    "build": "tsup src/main.ts --dts --format esm,cjs",
    "release": "npm run build && changeset publish",
    "lint": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.11.18",
    "esbuild-register": "^3.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "keywords": [],
  "author": "Thada Wangthammang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thaitype/querista.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}